@model WebApplicationMvc.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
}

@Html.ValidationSummary()
<form method="post" action="@Url.Action("ForgotPassword", "Account")" class="form-horizontal" role="form">
	@Html.AntiForgeryToken()
	<fieldset>
		<legend>Reset Password</legend>
		<div class="form-group">
			@Html.LabelFor(m => m.Email, new { @class = "control-label col-md-3" })
			<div class="col-md-9">
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-9 col-md-offset-3">
				<button type="submit" class="btn btn-primary">Email Link</button>
			</div>
		</div>
	</fieldset>
</form>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}