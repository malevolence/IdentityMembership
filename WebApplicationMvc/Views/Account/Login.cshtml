@model WebApplicationMvc.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="col-md-8">
		<form method="post" action="@Url.Action("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl })" class="form-horizontal" role="form">
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			<fieldset>
				<legend>Login</legend>
				<div class="form-group">
					@Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Email)
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Password)
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-3 col-md-9">
						<label class="checkbox">@Html.CheckBoxFor(m => m.RememberMe) @Html.DisplayNameFor(m => m.RememberMe)</label>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-3 col-md-9">
						<button type="submit" class="btn btn-primary">Sign In</button>
						<a href="@Url.Action("ForgotPassword", "Account")">Forgot Password?</a>
					</div>
				</div>
			</fieldset>
		</form>
    </div>
	<div class="col-md-4">
		<p>Haven't created an account yet?</p>
		<p><a href="@Url.Action("Register", "Account")" class="btn btn-primary">Register Now</a></p>
	</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}