
@{
    ViewBag.Title = "Test Password Hashing";
}

<p><strong>Password:</strong> @TempData["password"]</p>
<p><strong>Salt:</strong> @TempData["salt"]</p>
<p><strong>Hash:</strong> @TempData["hash"]</p>

<form method="post" action="@Url.Action("HashPassword")">
	<fieldset>
		<legend>Test Password Hashing</legend>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="text" id="password" name="password" class="form-control" />
		</div>
		<div class="form-group">
			<label for="salt">Salt</label>
			<input type="text" id="salt" name="salt" class="form-control" />
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Generate Hash</button>
		</div>
	</fieldset>
</form>
